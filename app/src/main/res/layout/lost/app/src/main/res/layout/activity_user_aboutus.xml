<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.UserAboutOurActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="关于我们"
        android:textSize="25dp"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="3dp"
        android:background="#9FEDF3F6"
        android:layout_marginLeft="6dp">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_meng"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/user_meng"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/meng"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="3dp"
        android:background="#9FEDF3F6"
        android:layout_marginLeft="6dp">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/tong"
            android:textSize="20dp"/>
        <ImageView
            android:id="@+id/image_tong"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/user_tong"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="3dp"
        android:background="#9FEDF3F6"
        android:layout_marginLeft="6dp">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_li"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/user_li"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/li"
            android:textSize="20dp"/>
    </LinearLayout>

</LinearLayout>